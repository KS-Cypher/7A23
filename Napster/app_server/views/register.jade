extends layout

block content
  .container
    .row
      .col-md-6.col-md-offset-3
        h2 Register
        p.lead Please fill in the registration form below:

        form.form-horizontal(role='form', action='/register', method='post')
          .form-group
            label.col-sm-3.control-label(for='username') Username
            .col-sm-9
              input.form-control(type='text', id='username', name='username', placeholder='Enter a username', required)
          .form-group
            label.col-sm-3.control-label(for='password') Password
            .col-sm-9
              input.form-control(type='password', id='password', name='password', placeholder='Enter a password', required)
          .form-group
            label.col-sm-3.control-label(for='email') Email
            .col-sm-9
              input.form-control(type='email', id='email', name='email', placeholder='Enter an email address', required)
          .form-group
            label.col-sm-3.control-label(for='confirm') Confirm Password
            .col-sm-9
              input.form-control(type='password', id='confirm', name='confirm', placeholder='Confirm your password', required)
          .form-group
            .col-sm-offset-3.col-sm-9
              button.btn.btn-primary(type='submit') Submit
              a.btn.btn-default(href='/') Cancel

